
@{
    ViewBag.Title = "UpdateProduct";
}

<h2>UpdateProduct</h2>
@Html.BeginForm(){ 

    @Html.ValidationSummary(true)
    @if (Session["oldData"] == null) { }
    else
    {
        var prod = (ShoppingCartMVCProject.Models.ProductInfo)Session["oldData"];
        <table>
            <tr>
                <td>ProdID</td>
                <td><input type="text" id="txtpid" name="txtpid" value="@prod.pid" readonly="readonly" /></td>
            </tr>
            <tr>
                <td>ProdName</td>
                <td><input type="text" id="txtpname" name="txtpname" value="@prod.pname" /></td>
            </tr>
            <tr>
                <td>Prod price</td>
                <td><input type="text" id="txtprice" name="txtprice" value="@prod.price" /></td>
            </tr>
            <tr>
                <td><input type="submit" value="Update" name="Command" /></td>
                <td>@Html.ActionLink("Back", "Index")</td>
            </tr>

        </table>
    }
}